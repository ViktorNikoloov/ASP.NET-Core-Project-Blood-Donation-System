@using BloodDonation.Common
@using BloodDonation.Web.ViewModels.Blog
@model ArticlesListViewModel

<div class="container container-fluid bg-neutral ">
    <h3 class="display-4 text-md-center">Блог статии</h3>
    <div class="row row-cols-1 row-cols-md-4 g-4">
        @{ var counter = 1; }
        @foreach (var article in Model.Articles)
        {
            if (counter > 4)
            {
                break;
            }
            <div class="col mb-3">
                <div class="card h-100 m-auto bg-primary">
                    <img src="@article.ImageUrl" class="card-img-top  mr-3 pb-2 pl-2 pr-2 pt-2" alt="article.Title">
                    <div class="card-body text-center text-white">
                        <h5 class="card-title text-center text-muted"><a href="@article.Url">@article.Title</a></h5>
                        <p class="card-text">@article.ShortDescription</p>
                    </div>
                    <div class="card-footer">
                        <small class="text-danger">Updated @article.ModifiedOn.Value.ToLocalTime().ToShortDateString()</small>
                    </div>
                    <div class="d-grid d-md-flex justify-content-center">
                        <a class="btn btn-outline-danger btn-icon mb-3 ml-2 mr-2" href="@article.Url">Статия</a>
                    </div>
                </div>
            </div>
            counter++;
        }

    </div>
</div>
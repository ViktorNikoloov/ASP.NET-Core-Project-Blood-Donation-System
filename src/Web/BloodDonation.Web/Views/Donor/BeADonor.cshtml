@using BloodDonation.Web.ViewModels.Donor
@using BloodDonation.Data.Models.Enums
@model DonorFormViewModel
@{
    this.ViewData["Title"] = "Стани Дарител";
}

<h1 class="alert alert-primary" role="alert">Тук и сега можете да станете героя, на когото всеки разчита. Станете безвъзмезден кръводарител. </h1>
<form method="post" text-center">
    <div class="class=" d-flex flex-column bd-highlight mb-3">
        <div asp-validation-summary="All" class="alert alert-primary" role="alert">Грешки възникнали при попълване на полетата:</div>

        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Виктор" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="MiddleName"></label>
            <input asp-for="MiddleName" class="form-control" placeholder="Георгиев" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Николов" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ImageUrl"></label>
            <input asp-for="ImageUrl" class="form-control" placeholder="https://...." />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Gender"></label>
            <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                <option selected="selected" value="">Моля изберете вашият пол</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="CityName"></label>
            <input asp-for="CityName" class="form-control" placeholder="Пловдив" />
            <span asp-validation-for="CityName" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="PostCode"></label>
            <input asp-for="PostCode" class="form-control" placeholder="4000" />
            <span asp-validation-for="PostCode" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="StreetName"></label>
            <input asp-for="StreetName" class="form-control" placeholder="Горно Броди №27" />
            <span asp-validation-for="StreetName" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="+359..." />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
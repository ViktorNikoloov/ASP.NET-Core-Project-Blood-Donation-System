@using BloodDonation.Common
@using BloodDonation.Web.ViewModels.Blog
@model ArticleCreateInputModel

@{
    this.ViewData["Title"] = "Създаване на статия";

}

<h1 class="text-center">@this.ViewData["Title"]</h1>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        relative_urls: false,
        remove_script_host: false,
        convert_urls: true,
        plugins: [
            "image paste table link code media fullscreen wordcount searchreplace lists"
        ]
    });
</script>

<form method="post" >
    <div asp-validation-summary="All" class=" alert-danger" role="alert"></div>

    <div class="card text-white mb-3">
        <div class="card-body text-center bg-info">
            <div class="card-title">
                <div class="form-group">
                    <div class="form-group">
                        <label asp-for="@Model.ImageUrl"></label>
                        <input asp-for="@Model.ImageUrl" class="form-control" />
                        <span asp-validation-for="@Model.ImageUrl" class="text-primary"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Title"></label>
                        <input asp-for="@Model.Title" class="form-control" placeholder="Колко често можем да даряваме кръв" />
                        <span asp-validation-for="@Model.Title" class="text-primary"></span>
                    </div>

                </div>
                <div class="form-group">

                    <div class="form-group">
                        <label asp-for="@Model.Description"></label>
                        <textarea asp-for="@Model.Description" class="form-control" placeholder="Пример: Вътрешно отделение"> </textarea>
                        <span asp-validation-for="@Model.Description" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <button asp-controller="Blog" type="submit" class="btn btn-block btn-primary">Публикувай</button>
            </div>
        </div>
    </div>
</form>



@section Scripts {
<partial name="_ValidationScriptsPartial" />
<partial name="_GoogleReCaptchaPartial" />
}



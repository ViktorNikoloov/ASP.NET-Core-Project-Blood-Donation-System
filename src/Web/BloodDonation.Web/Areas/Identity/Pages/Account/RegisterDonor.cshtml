@page
@model BloodDonation.Web.Areas.Identity.Pages.Account.RegisterDonorModel
@using BloodDonation.Web.ViewModels.Donor
@using BloodDonation.Data.Models.Enums
@{
    this.ViewData["Title"] = "Стани Кръводарител";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<hr class=" alert-primary w-auto">

<h4 class="text-center text-"><u>Тук и сега можете да станете героя, на когото всеки разчита. Станете безвъзмезден кръводарител.</u></h4>
<form method="post" text-center">
    <div class="class=" d-flex flex-column bd-highlight mb-3">
        <div asp-validation-summary="All" class=" alert-primary" role="alert"></div>

        <div class="form-group">
            <label asp-for="Input.FirstName"></label>
            <input asp-for="Input.FirstName" class="form-control" placeholder="Виктор" />
            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.MiddleName"></label>
            <input asp-for="Input.MiddleName" class="form-control" placeholder="Георгиев" />
            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.LastName"></label>
            <input asp-for="Input.LastName" class="form-control" placeholder="Николов" />
            <span asp-validation-for="Input.LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.Gender"></label>
            <select asp-for="Input.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
                <option selected="selected" value="">Моля изберете вашият пол</option>
            </select>
            <span asp-validation-for="Input.Gender" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="Input.CityName"></label>
            <input asp-for="Input.CityName" class="form-control" placeholder="Пловдив" />
            <span asp-validation-for="Input.CityName" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="Input.PostCode"></label>
            <input asp-for="Input.Gender" class="form-control" placeholder="4000" />
            <span asp-validation-for="Input.CityName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.CityName"></label>
            <input asp-for="Input.CityName" class="form-control" placeholder="Горно Броди №27" />
            <span asp-validation-for="Input.PostCode" class="text-danger"></span>
        </div>

        <div class="form-group">

            <label asp-for="Input.Gender"></label>
            <input asp-for="Input.CityName" class="form-control" placeholder="+359..." />
            <span asp-validation-for="Input.CityName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Input.CityName"></label>
            <input asp-for="Input.PostCode" class="file-path validate" type="text" placeholder="Профилна снимка">
            <span asp-validation-for="Input.PostCode" class="text-danger"></span>
            <label class="alert-info"> Или прикачете вашия файл от бутна "browse" &#8595;</label>

        </div>
        <div>
            <span class="form-group "></span>
            <input type="file" asp-for="Input.PostCode">
        </div>
    </div>

    <hr class=" alert-primary w-auto">

    <p>
        Натискайки бутона "Регистрация", вие потвърждавате, че сте запознати и съгласни с нашата
        <a href="/Home/Privacy">политика за опазване на личните данни</a>
    </p>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Регистрация</button>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_GoogleReCaptchaPartial" />

    <script>
        // Initialize text area
        document.addEventListener('DOMContentLoaded', function () {
            var textNeedCount = document.querySelectorAll('#input_text, #textarea1');
            M.CharacterCounter.init(textNeedCount);
        });
    </script>

    <script>
        // Initialize materialize select form.
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('select');
            var options = document.querySelectorAll('option');
            var instances = M.FormSelect.init(elems, options);
        });
    </script>
}
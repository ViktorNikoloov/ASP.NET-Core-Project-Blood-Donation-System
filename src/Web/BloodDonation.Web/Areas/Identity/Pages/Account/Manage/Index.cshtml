@page
@model IndexModel
@using BloodDonation.Common
@using BloodDonation.Data.Models.Enums
@{
    TempData["Profile"] = "Тук може да правите промени по профила си";
    ViewData["Title"] = "Профил";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4 style="margin: 0px 250px;">@ViewData["Title"]</h4>
<div style="margin: 0px 250px;">
    <img src="@Model.Input.ImageUrl" alt="Avatar" class="avatar rounded-circle">

</div>

<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-10">
        <form id="profile-form" enctype="multipart/form-data" method="post">
            @if (this.User.IsInRole(GlobalConstants.AdministratorRoleName))
            {
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <label asp-for="Username"></label>
                    <input asp-for="Username" class="form-control" disabled />
                </div>
            }
            else if (this.User.IsInRole(GlobalConstants.RecipientRoleName))
            {
                <div class="class float-md-none" d-flex flex-column bd-highlight mb-3>
                    <div asp-validation-summary="All" class=" alert-danger" role="alert"></div>

                    <hr class=" alert-primary w-auto">

                    <div class="form-row form-group">

                        <div class="col form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input asp-for="Input.FirstName" class="form-control" />
                            <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                        </div>
                        <div class="col form-group">
                            <label asp-for="Input.MiddleName"></label>
                            <input asp-for="Input.MiddleName" class="form-control" />
                            <span asp-validation-for="Input.MiddleName" class="text-danger"></span>
                        </div>
                        <div class="col form-group">
                            <label asp-for="Input.LastName"></label>
                            <input asp-for="Input.LastName" class="form-control" />
                            <span asp-validation-for="Input.LastName" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-row form-group">

                        <div class="form-row form-group w-100">

                            <div class="col form-group">
                                <label asp-for="Input.CityName"></label>
                                <input asp-for="Input.CityName" class="form-control" />
                                <span asp-validation-for="Input.CityName" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="Input.StreetName"></label>
                                <input asp-for="Input.StreetName" class="form-control" />
                                <span asp-validation-for="Input.StreetName" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="Input.PostCode"></label>
                                <input asp-for="Input.PostCode" class="form-control" />
                                <span asp-validation-for="Input.PostCode" class="text-danger"></span>
                            </div>

                        </div>

                        <div class="form-row form-group w-100">
                            <div class="col form-group">
                                <label asp-for="Input.PhoneNumber">Телефон</label>
                                <input asp-for="Input.PhoneNumber" class="form-control" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="col form-group">
                                <label asp-for="Input.BloodType"></label>
                                <select asp-for="Input.BloodType" class="form-control" asp-items="Html.GetEnumSelectList<BloodType>()" disabled readonly></select>
                            </div>
                            <div class="col form-group">
                                <label asp-for="Input.Gender"></label>
                                <input asp-for="Input.Gender" class="form-control" type="text" disabled readonly>
                            </div>


                        </div>

                        <div class="row form-group w-100">
                                <div class=" form-group file-path-wrapper w-100" style="margin: 0px 10px;">
                                    <label asp-for="Input.ImageUrl"></label>
                                    <input asp-for="Input.ImageUrl" class="file-path validate w-100" type="text" placeholder="Профилна снимка">
                                </div>
                                <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>

                                <div class="btn btn-block btn-outline-primary m-2">
                                    <span>Прикачете файл</span>
                                    <input type="file" asp-for="Input.ImageFile">
                                </div>
                        </div>

                    </div>

                    <hr class=" alert-primary w-auto">

                </div>

            }
            else
            {
                <div class="row">
                    <div class="input-field col s4">
                        <i class="material-icons prefix">account_circle</i>
                        <input id="icon_prefix" type="text" class="validate" asp-for="Input.FirstName">
                        <label for="icon_prefix">Име</label>
                        <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                    </div>
                    <div class="input-field col s4">
                        <input id="middle_name" type="text" class="validate" asp-for="Input.MiddleName">
                        <label>Презиме</label>
                        <span asp-validation-for="Input.MiddleName" class="text-danger"></span>

                    </div>
                    <div class="input-field col s4">
                        <input id="last_name" type="text" class="validate" asp-for="Input.LastName">
                        <label>Фамилия</label>
                        <span asp-validation-for="Input.LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s4">
                        <i class="material-icons prefix">local_phone</i>
                        <input asp-for="Input.PhoneNumber" />
                        <label for="icon_prefix" asp-for="Input.PhoneNumber"></label>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="file-field input-field">
                        <div class="btn waves-effect waves-light #4db6ac teal lighten-2">
                            <span>Снимка</span>
                            <input type="file" asp-for="Input.ImageFile">
                        </div>
                        <div class="file-path-wrapper">
                            <input asp-for="Input.ImageUrl" class="file-path validate" type="text" placeholder="Изберете профилна снимка">
                            <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            }

            <button id="update-profile-button" type="submit" class="btn btn-primary">Запази</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/UploadImageView.js"></script>
    <link href="~/css/UploadImageView.css" rel="stylesheet" />
}
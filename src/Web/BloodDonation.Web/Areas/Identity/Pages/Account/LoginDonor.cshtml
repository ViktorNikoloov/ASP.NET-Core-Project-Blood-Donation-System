@page
@model BloodDonation.Web.Areas.Identity.Pages.Account.LoginDonorModel
@{
    ViewData["Title"] = "Вход за Кръводарители";
}

<h3 style="padding-left: 10px;" class="left-align">@ViewData["Title"]</h3>
<div class="row">
    <div class="col s4">
        <section>
            <form id="account" method="post" asp-route-returnUrl="@Model.ReturnUrl">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">Парола</label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <p>
                        <label>
                            <input type="checkbox" asp-for="Input.RememberMe" />
                            <span>Запомни ме?</span>
                        </label>
                    </p>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary" type="submit" name="action">
                        Вход
                        <i class="material-icons right"></i>
                    </button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Забравена парола?</a>
                    </p>
                    <p>
                        <a asp-page="./RegisterDonor" asp-route-returnUrl="@Model.ReturnUrl">Регистрирайте се като Кръводарител.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col s8">
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_GoogleReCaptchaPartial" />
}